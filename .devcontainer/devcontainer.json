{
  "name": "Clawdbot Codespace",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": "npm install -g @clawdbot/cli && clawdbot configure --section gateway --set run.background=true",
  "customizations": {
    "codespaces": {
      "openFiles": []
    }
  },
  "portsAttributes": {
    "18791": {
      "label": "Clawdbot Gateway",
      "onAutoForward": "notify"
    }
  }
}
